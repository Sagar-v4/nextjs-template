{
	"name": "nextjs-template",
	"version": "0.2.0",
	"private": true,
	"author": "Sagar Variya",
	"description": "WebRTC based chat and video call app",
	"keywords": [],
	"license": "MIT",
	"packageManager": "pnpm@10.2.1",
	"type": "module",
	"engines": {
		"node": ">=22.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Sagar-v4/{repo name}.git"
	},
	"bugs": {
		"url": "https://github.com/Sagar-v4/{repo name}/issues"
	},
	"homepage": "https://github.com/Sagar-v4/{repo name}#readme",
	"scripts": {
		"dev": "next dev --turbopack",
		"dev:https": "next dev --experimental-https",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"prepare": "husky",
		"format": "prettier --write .",
		"release": "release-it",
		"gen:pwa-assets": "npm run gen:pwa-splash && npm run gen:pwa-icon-mstiles && npm run gen:pwa-icon && npm run gen:pwa-icon-maskable",
		"gen:pwa-splash": "npx pwa-asset-generator public/icon.png public/screens --favicon false --splash-only --quality 100",
		"gen:pwa-icon-mstiles": "npx pwa-asset-generator public/icon.png public/icons --opaque false --favicon false --mstile true --icon-only --padding '0%'",
		"gen:pwa-icon": "npx pwa-asset-generator public/icon.png public/icons --opaque false --maskable false --favicon true --icon-only --padding '0%'",
		"gen:pwa-icon-maskable": "npx pwa-asset-generator public/icon.png public/icons --opaque false --maskable true --favicon false --icon-only --padding '15%' --background '#000000'"
	},
	"dependencies": {
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-slot": "^1.2.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"idb-keyval": "^6.2.2",
		"lucide-react": "^0.532.0",
		"next": "15.4.4",
		"next-intl": "^4.3.4",
		"next-themes": "^0.4.6",
		"react": "19.1.1",
		"react-dom": "19.1.1",
		"sonner": "^2.0.6",
		"tailwind-merge": "^3.3.1",
		"web-push": "^3.6.7",
		"zustand": "^5.0.6"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.32.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.5.1",
		"@release-it/conventional-changelog": "^10.0.1",
		"@tailwindcss/postcss": "^4.1.11",
		"@types/node": "^22",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@types/web-push": "^3.6.4",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.32.0",
		"eslint-config-next": "15.4.4",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.3",
		"eslint-plugin-unused-imports": "^4.1.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"release-it": "^19.0.4",
		"tailwindcss": "^4.1.11",
		"tw-animate-css": "^1.3.6",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		],
		"**/*": [
			"prettier --write --ignore-unknown"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"release-it": {
		"$schema": "https://unpkg.com/release-it/schema/release-it.json",
		"git": {
			"commitMessage": "chore: release v${version}",
			"tagName": "v${version}"
		},
		"github": {
			"release": true
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"infile": "CHANGELOG.md",
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "Features"
						},
						{
							"type": "fix",
							"section": "Bug Fixes"
						},
						{
							"type": "refactor",
							"section": "Refactors"
						},
						{
							"type": "docs",
							"section": "Documentation"
						},
						{
							"type": "test",
							"section": "Tests"
						},
						{
							"type": "chore",
							"section": "Chores"
						},
						{
							"type": "ci",
							"section": "Continuous Integration"
						},
						{
							"type": "revert",
							"section": "Reverts"
						},
						{
							"type": "style",
							"section": "Styles"
						},
						{
							"type": "perf",
							"section": "Performance Improvements"
						},
						{
							"type": "build",
							"section": "Build System"
						}
					]
				}
			}
		}
	}
}
