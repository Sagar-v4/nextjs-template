{
	"$schema": "https://json.schemastore.org/prettierrc",
	"singleQuote": true,
	"useTabs": true,
	"singleAttributePerLine": true,
	"plugins": [
		"@ianvs/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	],
	"importOrder": [
		"<BUILTIN_MODULES>",
		"<THIRD_PARTY_MODULES>",
		"^@/components",
		"^@/lib",
		"^@/hooks",
		"^@/utils",
		"^@/app",
		"^@/.*",
		"^\\./",
		"^\\.\\./",
		"^.+\\.(jpg|jpeg|png|gif|webp|svg)$",
		"<TYPES>",
		"^[.]",
		"^.+\\.s?css$"
	],
	"tailwindFunctions": ["clsx", "cn", "cva"]
}
